<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="51dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/app_Nombre"
                android:ems="10"
                android:id="@+id/ingresaValor" android:autofillHints=""/>
        <Button
                android:text="@string/app_Boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/boton" android:onClick="guardarValor"/>
        <TextView
                android:text="@string/titulo_amigos"
                android:layout_width="match_parent"
                android:textColor="#1B0808"
                android:background="#F6DDFD"
                android:fontFamily="sans-serif-ligh"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/titulo_amigos" android:textSize="18sp"
        />
        <ListView
                android:id="@+id/lista_de_amigos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>