<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-168dp"
            tools:layout_editor_absoluteX="99dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/app_Nombre"
                android:ems="10"
                android:id="@+id/ingresaValor"/>
        <Button
                android:text="@string/app_Boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boton"
                android:onClick="guardarValor"/>
        <TextView
                android:text="yyyyyyyyyyy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/titulo_amigos"/>

        <TextView
                android:text="@string/app_Mostrar_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/texto"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>